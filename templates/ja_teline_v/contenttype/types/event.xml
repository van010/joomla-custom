<?xml version="1.0" encoding="utf-8"?>
<form>
	<icon>calendar</icon>
	<type>event</type>
	<title>Event</title>
	<fields name="attribs">
		<fieldset name="content_meta"
			label="Event Info">
			<!--IS REQUIRED FIELD-->
			<field name="ctm_content_type"
				   type="hidden"
				   default="event"
				   label="PLG_JACONTENT_TYPE_CONTENT_TYPE_LABEL"
				   description="PLG_JACONTENT_TYPE_CONTENT_TYPE_DESC"/>
			<!--IS REQUIRED FIELD-->

			<field name="ctm_logo"
				   type="media"
				   preview="true"
				   preview_width="100"
				   preview_height="100"
				   label="PLG_JACONTENT_TYPE_EVENT_LOGO_LABEL"
				   description="PLG_JACONTENT_TYPE_EVENT_LOGO_DESC"/>

			<field name="spacer_when" type="spacer" hr="true" />
			<field name="ctm_start"
				   type="calendar"
				   format="%Y-%m-%d %H:%M"
				   filter="user_utc"
				   showtime="true"
				   default=""
				   label="PLG_JACONTENT_TYPE_START_TIME_LABEL"
				   description="PLG_JACONTENT_TYPE_START_TIME_DESC"/>
			<field name="ctm_end"
				   type="calendar"
				   format="%Y-%m-%d %H:%M"
				   filter="user_utc"
				   showtime="true"
				   default=""
				   label="PLG_JACONTENT_TYPE_END_TIME_LABEL"
				   description="PLG_JACONTENT_TYPE_END_TIME_DESC"/>
			<field name="ctm_loop"
				   type="text"
				   default=""
				   label="PLG_JACONTENT_TYPE_LOOP_LABEL"
				   description="PLG_JACONTENT_TYPE_LOOP_DESC"/>

			<field name="spacer_where" type="spacer" hr="true" />
			<field name="ctm_latitude"
				   type="text"
				   default=""
				   label="PLG_JACONTENT_TYPE_LATITUDE_LABEL"
				   description="PLG_JACONTENT_TYPE_LATITUDE_DESC"/>
			<field name="ctm_longitude"
				   type="text"
				   default=""
				   label="PLG_JACONTENT_TYPE_LONGITUDE_LABEL"
				   description="PLG_JACONTENT_TYPE_LONGITUDE_DESC"/>
			<field name="ctm_venue"
				   type="text"
				   default=""
				   label="PLG_JACONTENT_TYPE_VENUE_LABEL"
				   description="PLG_JACONTENT_TYPE_VENUE_DESC"/>
			<field name="ctm_addr1"
				   type="text"
				   default=""
				   label="PLG_JACONTENT_TYPE_ADDRESS_1_LABEL"
				   description="PLG_JACONTENT_TYPE_ADDRESS_1_DESC"/>
			<field name="ctm_addr2"
				   type="text"
				   default=""
				   label="PLG_JACONTENT_TYPE_ADDRESS_2_LABEL"
				   description="PLG_JACONTENT_TYPE_ADDRESS_2_DESC"/>
			<field name="ctm_speakers"
				   type="jaitems"
				   label="PLG_JACONTENT_TYPE_SPEAKERS_LABEL"
				   description="PLG_JACONTENT_TYPE_SPEAKERS_DESC">
				<item name="sid"
					 type="contacts"
					 note="speakers"
					 default=""
					 label="PLG_JACONTENT_TYPE_SPEAKERS_LABEL"
					 description="PLG_JACONTENT_TYPE_SPEAKERS_DESC"/>
			</field>
			<field name="ctm_sponsors"
				   type="jaitems"
				   label="PLG_JACONTENT_TYPE_SPONSORS_LABEL"
				   description="PLG_JACONTENT_TYPE_SPONSORS_DESC">
				<item name="sid"
					  type="contacts"
					  note="sponsors"
					  default=""
					  label="PLG_JACONTENT_TYPE_SPONSOR_LABEL"
					  description="PLG_JACONTENT_TYPE_SPONSOR_DESC"/>
			</field>
			<!--<field name="ctm_online"
				   type="radio"
				   class="btn-group"
				   default="0"
				   label="PLG_JACONTENT_TYPE_ONLINE_EVENT_LABEL"
				   description="PLG_JACONTENT_TYPE_ONLINE_EVENT_DESC">
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>
			<field name="ctm_live"
				   type="radio"
				   class="btn-group"
				   default="0"
				   label="PLG_JACONTENT_TYPE_LIVE_NOW_LABEL"
				   description="PLG_JACONTENT_TYPE_IS_ONLINE_EVENT_LIVE_NOW_DESC">
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>-->
			<field name="ctm_tickets" type="jaitems" label="PLG_JACONTENT_TYPE_TICKETS_LABEL" description="PLG_JACONTENT_TYPE_TICKETS_DESC">
				<item name="class" size="10"  type="text" default="" label="PLG_JACONTENT_TYPE_CLASS_LABEL" description="PLG_JACONTENT_TYPE_CLASS_DESC" />
				<item name="desc" cols="40"  type="textarea" default="" label="PLG_JACONTENT_TYPE_DESCRIPTION_LABEL" description="PLG_JACONTENT_TYPE_DESCRIPTION_DESC" />
				<item name="end" type="calendar" filter="user_utc" default="" label="PLG_JACONTENT_TYPE_SALE_END_LABEL" description="PLG_JACONTENT_TYPE_SALE_END_DESC" />
				<item name="price" type="text" default="" label="PLG_JACONTENT_TYPE_PRICE_LABEL" description="PLG_JACONTENT_TYPE_PRICE_DESC" />
			</field>
			<field name="ctm_buy_link"
				   type="text"
				   default=""
				   label="PLG_JACONTENT_TYPE_BUY_LINK_LABEL"
				   description="PLG_JACONTENT_TYPE_BUY_LINK_DESC"/>
			<!--<field name="ctm_livedata"
				   type="editor"
				   buttons="true"
				   filter="raw"
				   default=""
				   label="PLG_JACONTENT_TYPE_REAL_TIME_DATA_LABEL"
				   description="PLG_JACONTENT_TYPE_REAL_TIME_DATA_DESC"/>-->
		</fieldset>
	</fields>
</form>
